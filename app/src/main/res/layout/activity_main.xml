<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hoangthang11051.nguyenhoangthang.MainActivity">

    <EditText
        android:id="@+id/et_tenquocgia"
        android:hint="Ten quoc gia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_nhietdo"
        android:hint="Nhiet do"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_add"
        android:text="add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_view"
        android:text="view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/listiew"
        tools:listitem="@layout/item_thoitiet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>